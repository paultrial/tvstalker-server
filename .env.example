# Core
PORT=3000
MONGO_URI=mongodb://127.0.0.1:27017/Series
# If using MongoDB Atlas SRV, include the db name explicitly:
# MONGO_URI=mongodb+srv://user:pass@cluster.mongodb.net/Series?appName=tvStalker
SESSION_SECRET=replace_me
SESSION_COOKIE_NAME=session
# Comma-separated list of allowed origins.
CORS_ORIGIN=http://localhost:4200,https://tvstalker.vercel.app
FRONTEND_URL=https://tvstalker.vercel.app
# For cross-site cookies in production:
COOKIE_SAMESITE=none
COOKIE_SECURE=true

# Jobs
DISABLE_JOBS=false
RARBG_CRON=0 */6 * * *
FILELIST_CRON=15 */6 * * *
TVMAZE_CRON=0 3 * * 1
TVMAZE_RUN_ON_START=false
FILELIST_PASSKEY=
FILELIST_FEED_URL=

# OpenSubtitles (optional; useful for hosted environments)
# OPENSUBTITLES_URL=https://api.opensubtitles.org/xml-rpc
OPENSUBTITLES_USER=
OPENSUBTITLES_PASS=
OPENSUBTITLES_LANG=en
OPENSUBTITLES_USERAGENT=OpenSubtitlesPlayer v4.7

# Mail (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
MAIL_FROM=no-reply@seriale.local
